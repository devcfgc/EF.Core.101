<Window x:Class="NorthWind.WpfApp.UpdateAndDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NorthWind.WpfApp"
        mc:Ignorable="d"
        Title="UpdateAndDelete" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Category ID:</Label>
                <TextBox Name="TxtCategoryID" Margin="10" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Category name:</Label>
                <TextBox Name="TxtCategoryName" Margin="10" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="BtnUpdate" Content="Update" Click="BtnUpdate_OnClick" Margin="10"/>
                <Button Name="BtnDelete" Content="Delete" Click="BtnDelete_OnClick" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
