@model List<NorthWind.Entities.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <div>Category name:</div>
            <div><input type="text" name="categoryName" /></div>
            <div><input type="submit" name="New Category"/></div>
        }
    </div>
    <br/>
    <table>
        <tr><td>ID</td><td>Name</td></tr>
        @foreach (var category in Model)
        {
            <tr>
                <td>@Html.ActionLink("Review details", "Details", new { id = category.CategoryId})</td>
                <td>@category.CategoryName</td>
            </tr>
        }
    </table>
</body>
</html>
